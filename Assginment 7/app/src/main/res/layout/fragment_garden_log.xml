<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.fragments.GardenLogFragment"
    android:id="@+id/fragmentGardenLog">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvGardenLog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/item_garden_log" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:contentDescription="@string/add_a_new_plant"
        android:foreground="@drawable/icon_add"
        android:layout_gravity="bottom|right"/>

</FrameLayout>